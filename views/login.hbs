{{#if loggedIn}}
    <h2>You are already logged in!</h2>
    {{else}}
    <div class="greeting">
        <h2>Welcome to the Tech Blog</h2>
    </div>

    <div class="memberBox">
        <div class="signUp">
            <div class="signUpHeader">
                <h3>New Around Here?<br>Sign Up</h3>
            </div>
            <div class="signUpForm">
                <h3>Username</h3>
                <form action="/placeholder" method="post">
                    <input name="placeholder" type="text" placeholder="Enter your new username">
                </form>
                <h3>Password</h3>
                <form action="/placeholder" method="post">
                    <input name="placeholder" type="text" placeholder="Enter your new password">
                </form>
                <button>Submit</button>
            </div>
        </div>
        <div class="login">
            <div class="loginHeader">
                <h3>Already A Member?<br>Login Below</h3>
            </div>
            <div class="loginForm">
                <h3>Username</h3>
                <form action="/placeholder" method="post">
                    <input name="placeholder" type="text" placeholder="Enter your username">
                </form>
                <h3>Password</h3>
                <form action="/placeholder" method="post">
                    <input name="placeholder" type="text" placeholder="Enter your password">
                </form>
                <button>Submit</button>
            </div>
        </div>
    </div>
{{/if}}